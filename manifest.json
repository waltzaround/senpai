{
  "manifest_version": 2,
  "name": "Senpai",
  "version": "2.0",
  "description": "Senpai master let you focus",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "webRequestBlocking",
    "webRequest",
    "activeTab",
    "tabs",
    "http://*.facebook.com/*",
    "https://*.facebook.com/*",
    "https://*.youtube.com/"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
