{
  "manifest_version": 2,
  "name": "Senpai",
  "version": "2.0",
  "description": "Senpai notices when you get distracted, and blocks distractions from getting in the way of your studies",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "webRequestBlocking",
    "webRequest",
    "activeTab",
    "tabs",
    "http://*.facebook.com/*",
    "https://*.facebook.com/*",
    "https://*.youtube.com/",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
      "default_icon": "icon16.png",
      "default_popup": "popup.html"
    }
}
